@model List<AnnouncementListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td><a href="#" class="btn btn-primary"> Detaylar</a></td>
            <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.Id" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.Id" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/Admin/Announcement/AddAnnouncement" class="btn btn-success">Yeni Duyuru</a>

