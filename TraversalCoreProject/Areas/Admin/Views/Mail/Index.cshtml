@model MailRequestModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Mail Gönderme Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Alıcı Mail")
        <input type="text" asp-for="ReceiverMail" class="form-control" />
        <span asp-validation-for="ReceiverMail" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Konu Başlığı")
        <input type="text" asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Mesaj")
        <textarea cols="30" rows="10" type="text" asp-for="Body" class="form-control"></textarea>
    </div>
    <br />
    <button class="btn btn-outline-primary">Mail Gönder</button>
</form>


