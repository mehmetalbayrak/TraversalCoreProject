@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int id = 0;
}
<h1>Kullanıcı Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Yorumlar</th>
        <th>Tur Geçmişi</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        id += 1;
        <tr>
            <td>@id</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td><a href="/Admin/User/CommentUser/@item.Id" class="btn btn-info">Yorumlar</a></td>
            <td><a href="/Admin/User/ReservationUser/@item.Id" class="btn btn-secondary">Tur Geçmişi</a></td>
            <td><a href="/Admin/User/EditUser/@item.Id" class="btn btn-success">Düzenle</a></td>
            <td><a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-danger" onclick="return confirm('Silmek istediğinden emin misin?')">Sil</a></td>
        </tr>
    }
</table>
<a href="/Login/SignUp" class="btn btn-primary"> Yeni Kullanıcı</a>

