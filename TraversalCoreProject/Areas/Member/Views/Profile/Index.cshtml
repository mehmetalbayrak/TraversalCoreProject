@model TraversalCoreProject.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Profil Düzenle</h1>
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        @Html.Label("Adınız")
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Soyadınız")
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Mail adresiniz")
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Şifre")
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Şifre tekrar")
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Telefon numarası")
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Resim seçiniz")
        <input type="file" asp-for="Image" class="form-control" />
    </div>
    <button class="btn btn-success">Bilgileri güncelle</button>
</form>



